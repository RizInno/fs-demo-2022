{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es6": true,
		"mocha": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"ignorePatterns": [
		"gen/",
		"public/",
		"node_modules/",
		"dist/",
		"scripts/",
		"test/",
		"security/",
		"*.cds"
	],
	"globals": {
		"SELECT": true,
		"INSERT": true,
		"UPDATE": true,
		"DELETE": true,
		"CREATE": true,
		"DROP": true,
		"cds": true,
		"sap": true
	},
	"rules": {
		"semi": "error",
		"no-extra-semi": "warn",
		"curly": "warn",
		"quotes": [
			"error",
			"double",
			{
				"allowTemplateLiterals": true
			}
		],
		"eqeqeq": "error",
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-console": "error",
		"space-before-blocks": "warn",
		"spaced-comment": "warn",
		"no-var": "error",
		"require-atomic-updates": "off",
		"camelcase": [
			"error",
			{
				"allow": [
					"^VH_",
					"^SH_",
					"_Id$",
					"_ID$",
					"fetch_csrf"
				]
			}
		],
		"new-cap": [
			"warn",
			{
				"capIsNewExceptionPattern": "^UPDATE"
			}
		],
		"complexity": [
			"error",
			11
		],
		"max-len": [
			"error",
			100,
			4
		],
		"consistent-return": "warn",
		"no-unused-expressions": "warn",
		"brace-style": [
			"warn",
			"1tbs"
		]
	}
}