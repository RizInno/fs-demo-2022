<mvc:View controllerName="com.demo.websocket.controller.App"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	height="100%">
	<Page title="{i18n>appTitle}">
		<content>
			<ScrollContainer height="100%"
				width="100%"
				horizontal="true"
				vertical="true">
				<Panel headerText="Chat App"
					expandable="true"
					expanded="true">
					<l:VerticalLayout class="sapUiContentPadding"
						width="100%">
						<l:content>
							<Input id="uName"
								value="{chatModel>/user}"/>
						</l:content>
						<l:content>
							<TextArea id="chatInfo"
								value="{chatModel>/chat}"
								cols="60"
								rows="8"
								editable="false"/>
						</l:content>
						<l:content>
							<Input id="message"
								value="{chatModel>/message}"
								placeholder="Enter message here..."/>
						</l:content>
					</l:VerticalLayout>
					<Button text="Send"
						press="sendMsg"/>
				</Panel>
			</ScrollContainer>
		</content>
	</Page>
</mvc:View>